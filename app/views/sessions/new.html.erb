<div class="container text-center">

	<p><%= link_to image_tag("login_with_facebook.png", height: "100px"), "/auth/facebook", id: "facebook-login"  %></p>

	<h1>Log In with Email</h1>
	<%= form_for(:session, method: :post )do |f| %>
		<p><%= f.label :email, class: 'user-signin-form-label' %>
		<%= f.text_field :email %><p>
		<p><%= f.label :password, class: 'user-signin-form-label' %>
		<%= f.text_field :password %><p>
		<p><%= f.submit "Submit", class: "btn btn-dark", id: "login-btn" %></p>
	<% end %>
		<p class="no-link-color"><%= link_to "Forgot your password?", new_password_reset_path, id: "forgot-pw" %></p>

	<p id="register-link" class="no-link-color"><%= link_to "Don't have an account? Register here.", new_user_path %></p>

</div>