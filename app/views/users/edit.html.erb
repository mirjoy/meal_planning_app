<div class="container text-center col-sm-4 col-sm-offset-4">
	<h1>Edit Your Profile</h1>

	<div class="form-group">
		<%= form_for(:user, url: users_path, method: :post) do |f| %>
			<p><%= f.label :user_name, "User Name", class: 'user-form-label' %>
				 <%- f.text_field :user_name %></p>
			<p><%= f.label :email, class: 'user-form-label' %>  
				 <%= f.text_field :email %></p>
			<p><%= f.label :phone_number, "Phone Number", class: 'user-form-label' %>
				 <%= f.text_field :phone_number %></p>
			<p><%= f.submit "Submit", class: "btn btn-dark" %></p>
		<% end %>

			<p class="no-link-color"><%= link_to "Forgot your password?", new_password_reset_path, id: "forgot-pw" %></p>
		</div>
</div>
</div>