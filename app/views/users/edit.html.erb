<div class="container text-center col-sm-6 col-sm-offset-3">
	<div class="row">
		<h1>Edit Your Profile</h1>

		<div class="form-group">
			<%= form_for(:user, url: user_path(@user), method: :put) do |f| %>
				<% if @user && @user.errors.any? %>
				    <div class="alert alert-danger">
				    The form contains <%= pluralize(@user.errors.count, "error") %>.
				    </div>
				    <ul>
				      <% @user.errors.full_messages.each do |msg| %>
				        <li><%= msg %></li>
				      <% end %>
				    </ul>
				<% end %>	
				<p><%= f.label :user_name, "User Name", class: 'user-form-label' %>
					 <%= f.text_field :user_name %></p>
				<p><%= f.label :email, class: 'user-form-label' %>  
					 <%= f.text_field :email %></p>
				<p><%= f.label :phone_number, "Phone Number", class: 'user-form-label' %>
					 <%= f.text_field :phone_number %></p>
				<p><%= f.submit "Submit", class: "btn btn-dark" %></p>
			<% end %>
		</div>
	</div>
</div>