<div class="container">
	<div class="row">
		<h1 class="text-center one-meal">This Week's Meal Plan</h1>
	</div>

	<div class="row one-meal">
		<%= @meals.each do |meal| %>
		<div class="col-sm-4 text-center">
			<div class="image-background">
				<%= image_tag(meal.image_url, height: "200") %>
			</div>
		</div>
		<div class="col-sm-8 text-left">
			<h2><%= meal.name %></h2>
			<h4>Ingredients:</h4>
				<% meal.ingredients.each do |ingredient| %>
					<p><%= ingredient.name %></p>
				<% end %>
			<div class="btn-group">
				<button type="button" class="btn btn-try-again">Find Another Recipe</button>	
				<button type="button" class="btn btn-hate-it">Never Show Me This Recipe</button>
			</div>
		</div>
		<% end %>
	</div>

	<div class="text-center" id="grocery-list">
		<h2>Grocery List</h2>
			

			<button type="button" class="btn btn-default">Export to Wunderlist</button>	
	</div>


</div>
